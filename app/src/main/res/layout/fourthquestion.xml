<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/q4"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
           android:text="دوست دارید توی چه خانه ای زندگی کنید؟"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="right"
        android:scrollbarSize="1dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"

            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:background="@drawable/shape"
                android:src="@drawable/apartment"
                android:onClick="onClickApartment"/>

            <TextView
                android:id="@+id/apartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="8dp"
                android:layout_row="2"
                android:text="آپارتمان"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@drawable/shape"
                android:src="@drawable/vila"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickVila"/>

            <TextView
                android:id="@+id/vila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginTop="8dp"
                android:layout_row="2"
                android:text="ویلا"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_row="2"
                android:background="@drawable/shape"
                android:src="@drawable/mountain"
                android:onClick="onClickMountain"/>

            <TextView
                android:id="@+id/mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="8dp"
                android:layout_row="4"
                android:text="کوهستان"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_row="2"
                android:background="@drawable/shape"
                android:src="@drawable/sea"
                android:onClick="onClickSea"/>

            <TextView
                android:id="@+id/sea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginTop="8dp"
                android:layout_row="4"
                android:text="کنار دریا"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_row="5"
                android:background="@drawable/shape"
                android:src="@drawable/jungle"
                android:onClick="onClickJungle"/>

            <TextView
                android:id="@+id/jungle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="8dp"
                android:layout_row="6"
                android:text="جنگل"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                />

        </GridLayout>
    </ScrollView>



</LinearLayout>