<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="چه چیزی بیشتر اذیتتان می کند؟"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="@drawable/shape"
            android:src="@drawable/kasifi"
            android:onClick="onClickKasifi"/>

        <TextView
            android:id="@+id/kasifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="8dp"
            android:layout_row="2"
            android:text="کثیفی"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/shape"
            android:src="@drawable/trafic"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickTraffic"/>

        <TextView
            android:id="@+id/traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="8dp"
            android:layout_row="2"
            android:text="ترافیک"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_row="2"
            android:background="@drawable/shape"
            android:src="@drawable/noise"
            android:onClick="onClickNoise"/>

        <TextView
            android:id="@+id/noise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="8dp"
            android:layout_row="4"
            android:text="سر و صدا"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_row="2"
            android:background="@drawable/shape"
            android:src="@drawable/earlyclose"
            android:onClick="onClickEarlyclose"/>

        <TextView
            android:id="@+id/earlyclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="8dp"
            android:layout_row="4"
            android:text="زود تعطیل \n شدن شهر"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

    </GridLayout>


</LinearLayout>